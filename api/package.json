{
  "name": "platform-services-registry",
  "version": "0.0.1",
  "description": "",
  "author": "Jason C. Leach <jason.leach@fullboar.ca>",
  "license": "Apache-2.0",
  "repository": "https://github.com/bcgov/platform-services-registry.git",
  "homepage": "https://github.com/bcgov/platform-services-registry",
  "bugs": "https://github.com/bcgov/platform-services-registry/issues",
  "keywords": [
    "github",
    "platform-services",
    "registry"
  ],
  "scripts": {
    "build": "NODE_ENV=production gulp",
    "build:doc": "mkdir -p public/doc/api/ && api2html -o public/doc/api/index.html -l shell,javascript--nodejs ./doc/api.yaml",
    "dev": "nodemon --watch src --inspect=0.0.0.0:5858 -e ts,tsx --exec node -r ts-node/register ./src/server.ts",
    "dev:docker": "nodemon -L --delay 1600ms --watch build --inspect=0.0.0.0:5858 -e js,json --nolazy ./build/server.js",
    "start": "node build/server.js",
    "test:lint": "NODE_ENV=test tslint src/**/*.ts",
    "test:schema": "swagger-cli validate doc/api.yaml",
    "test": "NODE_ENV=test jest __tests__",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@bcgov/common-nodejs-utils": "^0.1.18",
    "@types/dotenv": "^8.2.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.14",
    "nconf": "^0.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.2.1",
    "transform-runtime": "0.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/nconf": "0.10.0",
    "@types/node": "^14.0.3",
    "api2html": "^0.3.5",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "smee-client": "^1.1.0",
    "standard": "^14.3.4",
    "supertest": "^4.0.2",
    "swagger-cli": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.2"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
